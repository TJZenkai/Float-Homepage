<!-- RENDER NAV BAR -->
<%= render partial: "layouts/nav/nav" %>

<style type="text/css">
  .institution {
    height: 71px;
    width: 71px;  
    display: inline-block;
    border-radius: 50%;
    border: 4px solid #43a6cf;
  }
  .institution img {
    height: 71px;
    width: 71px;
  }
  .bank-name {
    display: inline-block;
    font-size: 28px;
    color: #535353;
    height: 90px;
    vertical-align: middle;
    padding-left: 15px;
  }
  .secure {
    margin-left: 10px;
    display: inline-block;
    cursor: default;
  }
  .secure img {
    height: 25px;
  }
  .secure-text {
    display: inline-block;
    height: 25px;
    vertical-align: middle;
    padding-left: 10px;
  }
</style>

<div class="content">
  <div class="page-title">
    Login to your bank.
  </div>

  <div class="sub-title">
    We take your security very seriously. We use 128 bit SSL
    <br />
    encryption and we never store your banking credentials.
  </div>

  <!-- Error Alert Message -->
  <div class="alert-error">
    <%= flash[:notice] %>
  </div>

  <div class="container">
  <div class="institution">
    <img src="/assets/icons/banks/<%= @type %>.png">
  </div>
  <div class="bank-name">
    <%= @type %>
  </div>
    <!-- RENDER BANK LOGIN FORM -->
    <%= render partial: "layouts/forms/bank_login_form" %>
  </div>

</div>